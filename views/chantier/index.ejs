  <%
    const exportParams = [];
    const pushParam = (key, value) => {
      if (value !== undefined && value !== null && value !== '') {
        exportParams.push(`${key}=${encodeURIComponent(value)}`);
      }
    };
    pushParam('chantierId', chantierId);
    pushParam('nomMateriel', nomMateriel);
