<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Historique - Stock Chantier</title>
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <!-- Icônes Bootstrap (optionnel) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  
  <!-- Votre fichier de style perso, s'il existe -->
  <link rel="stylesheet" href="/css/style.css">
  
  <style>
    /* Palette pastel & style global */

    .navbar,
    .card-header {
      background-color: #00b894; /* un vert pastel */
      color: #fff;
    }

    .navbar-brand {
      font-weight: 600;
      letter-spacing: 0.02em;
    }

    .container {
      margin-top: 1.5rem;
      margin-bottom: 2rem;
    }

    .card {
      border-radius: 0.75rem;
      overflow: hidden;
      border: none;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .card-header {
      border-bottom: none;
    }

    .table-historique thead th {
      background-color: #00b894; /* vert pastel */
      color: #fff;
      border: none;
      letter-spacing: 0.05em;
      text-transform: uppercase;
    }
    .table-historique tbody tr:hover {
      background-color: #f8f9fa;
    }

    /* Badges pour l'action */
    .badge-action {
      font-size: 0.85rem;
      padding: 0.35em 0.6em;
      border-radius: 0.5rem;
      text-transform: uppercase;
    }
    .badge-create {
      background-color: #55efc4; /* un autre vert pastel */
      color: #2d3436;
    }
    .badge-update {
      background-color: #ffeaa7; /* jaune pastel */
      color: #2d3436;
    }
    .badge-delete {
      background-color: #ff7675; /* rouge pastel */
      color: #fff;
    }
    .badge-delivery {
      background-color: #74b9ff; /* bleu pastel */
      color: #fff;
    }

    /* Mode sombre */
    body.mode-sombre {
      background-color: #121212;
      color: #e0e0e0;
    }
    body.mode-sombre .navbar,
    body.mode-sombre .card-header,
    body.mode-sombre .table-historique thead th {
      background-color: #2d3436 !important; /* gris très foncé */
      color: #fff;
    }
    body.mode-sombre .table-historique tbody tr:hover {
      background-color: #3a3a3a;
    }
    body.mode-sombre .badge-create,
    body.mode-sombre .badge-update,
    body.mode-sombre .badge-delete,
    body.mode-sombre .badge-delivery {
      filter: brightness(0.9);
    }

    .historique-table .col-action-texte {
      max-width: 320px;
      white-space: normal;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }

    .historique-table .action-text {
      display: -webkit-box;
      -webkit-line-clamp: 3;
      -webkit-box-orient: vertical;
      overflow: hidden;
      max-height: 4.5em;
      transition: max-height 0.2s ease;
    }

    .historique-table .action-text.expanded {
      -webkit-line-clamp: unset;
      max-height: none;
    }

    .historique-table .toggle-action {
      border: none;
      background: none;
      color: #0d6efd;
      padding: 0;
      font-size: 0.9rem;
    }
  </style>
</head>

<body>
  <!-- Barre de navigation -->
  <nav class="navbar navbar-expand-lg">
    <div class="container-fluid px-4">
      <a class="navbar-brand" href="#">
        <i class="bi bi-building"></i> Historique - Stock Chantier
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarToggle">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarToggle">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <button id="toggleMode" class="btn btn-outline-light btn-sm me-2">
              <i class="bi bi-moon-stars-fill"></i> Mode sombre
            </button>
          </li>
          <li class="nav-item">
            <a href="/chantier" class="btn btn-light btn-sm">
              <i class="bi bi-arrow-left"></i> Retour
            </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Contenu principal -->
  <div class="container">
    <div class="card">
      <div class="card-header d-flex align-items-center">
        <h2 class="h5 mb-0">
          <i class="bi bi-clock-history me-2"></i>Historique des Livraisons vers Chantier
        </h2>
      </div>

      <div class="card-body">
        <% if (historiques && historiques.length > 0) { %>
          <!-- Filtre chantier (requête côté serveur) -->
          <form
            id="historiqueChantierFilter"
            class="row g-2 mb-3"
            method="GET"
            action="/chantier/historique"
          >
            <div class="col-md-4">
              <label for="chantierId" class="form-label">Filtrer par chantier</label>
              <select
                id="chantierId"
                name="chantierId"
                class="form-select"
                onchange="this.form.submit()"
              >
                <option value="all" <%= selectedChantierId === 'all' ? 'selected' : '' %>>
                  Tous les chantiers
                </option>
                <% chantiers.forEach(function(c) { %>
                  <option value="<%= c.id %>" <%= String(selectedChantierId) === String(c.id) ? 'selected' : '' %>><%= c.nom %></option>
                <% }) %>
              </select>
            </div>
          </form>

          <!-- Tri local (JS) -->
          <form id="historiqueSortForm" class="row g-2 mb-3">
            <div class="col-md-3">
              <label for="triCol" class="form-label">Trier par</label>
              <select id="triCol" class="form-select">
                <option value="date">Date</option>
                <option value="chantier">Chantier</option>
                <option value="action">Action</option>
              </select>
            </div>
            <div class="col-md-3">
              <label for="triOrder" class="form-label">Ordre</label>
              <select id="triOrder" class="form-select">
                <option value="desc">Décroissant</option>
                <option value="asc">Croissant</option>
              </select>
            </div>
          </form>
          <div class="table-responsive">
            <table class="table table-historique historique-table align-middle table-borderless">
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Matériel</th>
                  <th>Ancienne Qte</th>
                  <th>Nouvelle Qte</th>
                  <th>Action</th>
                  <th>Effectué par</th>
                  <th>Date / Heure</th>
                </tr>
              </thead>
              <tbody>
                <% historiques.forEach(function(h){ %>
                  <tr
                    data-sort-date="<%= h.createdAt ? new Date(h.createdAt).toISOString() : '' %>"
                    data-sort-chantier="<%= h.materielNom || '' %>"
                    data-sort-action="<%= h.action || '' %>"
                  >
                    <td><%= h.id %></td>
                    <td><%= h.materielNom || 'Inconnu' %></td>
                    <td><%= h.oldQuantite !== null ? h.oldQuantite : '-' %></td>
                    <td><%= h.newQuantite !== null ? h.newQuantite : '-' %></td>
                    <td class="col-action-texte">
                      <div class="action-text">
                        <!-- Différenciation par type d'action -->
                        <% if (h.action === 'DELETE') { %>
                          <span class="badge badge-action badge-delete">
                            <i class="bi bi-trash-fill"></i> Supprimé
                          </span>
                        <% } else if (h.action === 'UPDATE') { %>
                          <span class="badge badge-action badge-update">
                            <i class="bi bi-pencil-square"></i> Modifié
                          </span>
                        <% } else if (h.action === 'CREATE_IN_CHANTIER' || h.action === 'CRÉÉ SUR CHANTIER') { %>
                          <span class="badge badge-action badge-create">
                            <i class="bi bi-plus-circle"></i> Créé
                          </span>
                        <% } else if (h.action === 'DELIVERY_TO_CHANTIER') { %>
                          <span class="badge badge-action badge-delivery">
                            <i class="bi bi-truck"></i> Livré
                          </span>
                        <% } else { %>
                          <span class="badge badge-action bg-info">
                            <%= h.action %>
                          </span>
                        <% } %>
                        <% if (h.description) { %>
                          <div class="small text-muted mt-1"><%= h.description %></div>
                        <% } %>
                      </div>
                      <button type="button" class="toggle-action" aria-label="Basculer le détail de l'action">Voir plus</button>
                    </td>
                    <td><%= h.user ? h.user.nom : 'Inconnu' %></td>
                    <td><%= new Date(h.createdAt).toLocaleString('fr-FR') %></td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <p class="text-muted text-center fs-5 my-4">
            <i class="bi bi-info-circle-fill"></i> Aucun historique à afficher.
          </p>
        <% } %>
      </div>

      <div class="card-footer bg-light text-end">
        <a href="/chantier" class="btn btn-outline-secondary">
          <i class="bi bi-arrow-left"></i> Retour au Dashboard Chantier
        </a>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="/js/bootstrap.bundle.min.js"></script>
  <script nonce="<%= nonce %>">
    const toggleBtn = document.getElementById('toggleMode');
    toggleBtn.addEventListener('click', () => {
      document.body.classList.toggle('mode-sombre');
    });

    (function () {
      const triCol = document.getElementById('triCol');
      const triOrder = document.getElementById('triOrder');
      const tbody = document.querySelector('.historique-table tbody');

      if (!triCol || !triOrder || !tbody) return;

      function sortHistorique() {
        const col = triCol.value;
        const order = triOrder.value;
        const rows = Array.from(tbody.querySelectorAll('tr'));

        rows.sort((a, b) => {
          const key = 'sort' + col.charAt(0).toUpperCase() + col.slice(1);
          const av = a.dataset[key] || '';
          const bv = b.dataset[key] || '';

          if (col === 'date') {
            const ad = new Date(av).getTime() || 0;
            const bd = new Date(bv).getTime() || 0;
            return ad - bd;
          }

          return String(av).localeCompare(String(bv), 'fr', { sensitivity: 'base' });
        });

        if (order === 'desc') rows.reverse();
        rows.forEach(r => tbody.appendChild(r));
      }

      triCol.addEventListener('change', sortHistorique);
      triOrder.addEventListener('change', sortHistorique);

      sortHistorique();
    })();

    (function () {
      const table = document.querySelector('.historique-table');
      if (!table) return;

      function refreshToggleVisibility() {
        const rows = table.querySelectorAll('.action-text');
        rows.forEach(actionText => {
          const button = actionText.nextElementSibling;
          if (!button) return;

          const isOverflowing = actionText.scrollHeight - 2 > actionText.clientHeight;
          button.style.display = isOverflowing ? 'inline' : 'none';
        });
      }

      table.addEventListener('click', (event) => {
        const button = event.target.closest('.toggle-action');
        if (!button) return;

        const actionText = button.previousElementSibling;
        if (!actionText) return;

        const expanded = actionText.classList.toggle('expanded');
        button.textContent = expanded ? 'Voir moins' : 'Voir plus';
      });

      refreshToggleVisibility();
    })();
  </script>
</body>
</html>
